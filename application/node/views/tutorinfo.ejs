    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Tutor Info</title>
</head>
<body>

    
    <%- include('partials/header') %>

    <br>
    <div style="text-align:center;"><strong> Software Engineering Project CSC 648-848, Fall 2021 For Demonstration Only</strong></div>
    <div style="text-align:center;"><strong> Fall 2021 | Section 3 | Team 3</strong></div>
    <br>
    <div class="section">
        <div class="container pt-1">
            <div class="content-section pt-5">
                <div class="about-text container">
                    <div class="row">
                        <h5><%= tutorData['first_name'];%> <%= tutorData['last_name'];%> is offering tutoring for</h5>
                    </div>
                    <div class="row">
                        <h5><%= tutorData['major_short_name'].toUpperCase() %> <%= tutorData['courseNumber']%> <%= tutorData['courseTitle']%></h5>
                    </div>
                    <div class="row py-4">
                        <p><%= tutorData['post_details'];%></p>
                    </div>
                </div>
                <div class="main container text-center">
                    <form <% if(userLoggedIn === false) { %> action="/tutor/contactlogin" <% } %> method="post" class="d-flex my-2">
                                     
                        <input type="text" id="messageText" class="form-control me-3" name="messageText" <% if(typeof(messageText) !== 'undefined') { %> value="<%= messageText; %>" <% } %>>
                        <% if(userLoggedIn === false) { %>
                            <input type="hidden" id="referringTutorPage" class="form-control border=0  rounded-0" name="referringTutorPage" value="/tutor/<%= tutorData['first_name']; %>-<%= tutorData['last_name']; %>-t<%= tutorData['tutor_post_id']; %>">
                        <% } %>
                       
                        
                    </form>
                     <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target= "#reg-modal">Contact Me!
                        </button>
                </div>    
            </div>
            <div class="image1-section pt-2">
                    <div class="img-fluid rounded mx-auto d-block">
                        <% if (image !== undefined) { %>
                            <img class="search_image" src="data:image/jpeg;base64,  <%- image; %>">
                        <% } else { %>
                            <div class="search_image"></div>
                        <% } %>
                    </div>
                    <div class="about-text ps-3">
                        <h3><%= tutorData['first_name'];%> <%= tutorData['last_name'];%></h3>
                    </div>
            </div> 
        </div>
    </div>
                 
    <!-- Option 2: Separate Popper and Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</body>


     <div class="modal fade" id="reg-modal" tabindex="-" aria-labelledby="modal-title"
                        aria-hideen="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class ="modal-title" id="modal-title">Congratulations!</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                              aria-label="Close"></button>
                            </div>
                            <div class= "modal-body">
                              <p>Your message was sent!</p>
                              <button class="btn-btn-primary" data-bs-dismiss="modal" >Close</button>
                            </div>
                          </div>
                        </div>


             <div class="modal fade" id="reg-modal" tabindex="-2" aria-labelledby="modal-title"
                        aria-hideen="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class ="modal-title" id="modal-title">Sorry!</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal"
                              aria-label="Close"></button>
                            </div>
                            <div class= "modal-body">
                              <p>To contact this tutor you must first log in. Would you like to log in now?</p>
                              <button type="button" class="btn-btn-secondary" data-dismiss="modal">Log In</button>
                              <button class="btn-btn-primary" data-bs-dismiss="modal" >No</button></div>
                          </div>
                        </div>
</html>
